<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.neupanesushant.spotifyfrontendclone">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_spotify_colored"
        android:label="Spotify Clone"
        android:roundIcon="@drawable/ic_spotify_colored"
        android:supportsRtl="true"
        android:theme="@style/Theme.SpotifyFrontEndClone">
        <activity
            android:name=".LibraryAddActivity"
            android:exported="false"
            android:windowSoftInputMode="stateVisible|adjustResize"
            />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>