<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/library_add_activity_background"
    tools:context=".LibraryAddActivity">

    <TextView
        android:id="@+id/tvContentTitle"
        style="@style/SmallTextWithGothamBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/addPlaylistTitle"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.375" />

    <EditText
        android:id="@+id/etPlaylistNameInput"
        style="@style/HeaderTextWithGothamBold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64sp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@color/grey"
        android:cursorVisible="true"
        android:fitsSystemWindows="true"
        android:gravity="center"
        android:textColor="@color/white"
        android:textCursorDrawable="@color/grey"
        android:textSize="32sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvContentTitle" />


    <TextView
        android:id="@+id/tvCancle"
        style="@style/SmallTextWithGotham"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancle"
        android:textAllCaps="true"
        android:textColor="@color/grey"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@id/etPlaylistNameInput"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.35"
        android:padding="10dp"
        android:textSize="13sp"
         />

    <TextView
        android:id="@+id/tvAction"
        style="@style/SmallTextWithGotham"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/secondary"
        android:textAllCaps="true"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@id/etPlaylistNameInput"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.65"
        android:padding="10dp"
        android:textSize="13sp"
         />

</androidx.constraintlayout.widget.ConstraintLayout>